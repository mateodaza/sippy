{
  "name": "sippy-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Sippy WhatsApp payment backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "tsx server.ts",
    "dev:watch": "nodemon --exec tsx server.ts",
    "test": "tsx tests/run-all.ts",
    "test:unit": "tsx tests/unit/message-parser.test.ts && tsx tests/unit/phone-validation.test.ts",
    "test:llm": "tsx tests/llm/natural-language.test.ts && tsx tests/llm/edge-cases.test.ts",
    "test:integration": "tsx tests/integration/wallet-operations.test.ts",
    "test:e2e": "tsx tests/e2e/full-flow.test.ts",
    "verify-config": "tsx verify-config.ts",
    "import-wallets": "tsx src/commands/import-wallets.ts"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.38.4",
    "axios": "^1.12.2",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "groq-sdk": "^0.34.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
